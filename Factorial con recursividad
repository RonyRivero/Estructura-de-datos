#include <iostream>
using namespace std;

int factorial(int n);

int main()
{   int n;
    cout << "ingresar el numero: ";
    cin >> n;
    cout << "el factorial de " << n << " es: " << factorial (n);
    return 0;
}

int factorial(int n){
    if (n == 0){
        return 1;
    }
    else {
        return n *= factorial (n-1);
    }
}
