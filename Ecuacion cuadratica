//ecuacion cradratica//
#include <iostream>
#include <math.h>
using namespace std;
int main()
{   float a, b, c, d, xmas, xmenos;
    cout << "Discriminante: b^2 - 4ac" << endl;
    cout << "ingrese el valor de b: ";
    cin >> b;
    cout << "ingrese el valor de a: ";
    cin >> a;
    cout << "ingrese el valor de c: ";
    cin >> c;
    
    d = (b*b) - 4*a*c;
    
    if ( d < 0)
        {
            cout << "la soluciÃ³n es imaginaria" << endl;
        }
    if (d = 0)
    {
        cout << "la solucion es real" << endl;
        xmas = ((-b + sqrt ((b*b)-4*a*c))/(2*a);
        xmenos = ((-b - sqrt ((b*b)-4*a*c))/(2*a);
    }
    if (d > 0)
    {
        cout << "solucion unica" << endl;
        xmas = ((-b + sqrt ((b*b)-4*a*c))/(2*a);
        xmenos = ((-b - sqrt ((b*b)-4*a*c))/(2*a);
    }
    
    return 0;
}
